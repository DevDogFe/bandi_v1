<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bandi.novel.repository.BoardFileRepository">
	
	<insert id="insertFile">
		insert into board_file_tb(board_id, raw_file_name, encoded_file_name)
		values(#{boardId}, #{rawFileName}, #{encodedFileName})
	</insert>
	
	<select id="selectFileList" resultType="com.bandi.novel.model.BoardFile">
		select * from board_file_tb where board_id = #{boardId}
	</select>
	
	<delete id="deleteFile">
		delete from board_file_tb where id = #{id}
	</delete>
	
</mapper>